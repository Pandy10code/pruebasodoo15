<odoo>
    <data>
  
      <record model="ir.ui.view" id="escuela_representante_form">
        <field name="name">escuela.representante.form</field>
        <field name="model">escuela.representante</field>
        <field name="arch" type="xml">
          <form string="Contact">
            <header>
                
            </header>
            <sheet>
              <field name="is_company" invisible="1"/>
              <field name="type" invisible="1"/>
              <field name="avatar_128" invisible="1"/>
              <field name="image_1920" widget='image' class="oe_avatar" options='{"preview_image": "avatar_128"}'/>
              <div class="oe_title">
                  <field name="company_type" options="{'horizontal': true}" widget="radio" groups="base.group_no_one"/>
                  <h1>
                    <field id="individual" name="name" default_focus="1" placeholder="e.g. Brandom Freeman" attrs="{'required' : [('type', '=', 'contact'),('is_company','=', False)], 'invisible': [('is_company','=', True)]}"/>
                  </h1>
              </div>
              <group>
                  <field name="user_ids" invisible="1"/>
                  <field name="email" widget="email" context="{'gravatar_image': True}" required="context.get('force_email', False)" attrs="{'required': [('user_ids','!=', [])]}"/>
                  <field name="phone" widget="phone" options="{'enable_sms': false}"/>
                  <field name="mobile" widget="phone" options="{'enable_sms': false}"/>
              </group>
              <group>
                <field name="sueldo"/>
                <field name="tipos_pension" />
                
              </group>
            </sheet>
          </form>
        </field>
      </record>
  
  
  
      <!-- actions opening views on models accion para abrir vista-->
  
      <record model="ir.actions.act_window" id="escuela_representante_action_window">
        <field name="name">Ficha representante</field>
        <field name="res_model">escuela.representante</field>
        <field name="view_mode">tree,form</field>
      </record>
     
    </data>
  </odoo>