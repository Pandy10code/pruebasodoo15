<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="escuela.report_lista_representantes_document">
        <t t-call="web.external_layout">
            <div class="page">
                <div>
                    <table class="table table-sm" width="100%">
                        <thead>
                            <tr class="table-primary">
                                <th>
                                    Campo
                                </th>
                                <th>
                                    Dato
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    Nombre
                                </td>
                                <td>
                                    <span t-field="doc.name"/>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    Correo electronico
                                </td>
                                <td>
                                    <span t-field="doc.email"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>

            </div>
        
        </t>      
    </template>
    
    <template id="report_lista_representantes_template"> <!-- Id de la template -->
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="escuela.report_lista_representantes_document"/>
            </t>
        </t>
    </template>

</odoo>
